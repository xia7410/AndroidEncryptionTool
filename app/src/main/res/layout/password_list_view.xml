<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/password_list_view_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/password_list_view_checkBox"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/password_list_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="#3333ff"
            android:textSize="19sp"
            android:text="@string/delete"/>

        <TextView
            android:id="@+id/password_list_view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/password_list_view_name"
            android:layout_below="@id/password_list_view_name"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="12sp"
            android:text="@string/delete"/>

        <TextView
            android:id="@+id/password_list_view_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/password_list_view_name"
            android:layout_below="@id/password_list_view_username"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="12sp"
            android:text="@string/delete"/>
    </RelativeLayout>
</LinearLayout>